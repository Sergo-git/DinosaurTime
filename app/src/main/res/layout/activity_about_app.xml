<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutApp"
    android:orientation="vertical"
    android:background="@drawable/aboutapp">



    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Время динозавров"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:fontFamily="@font/font_bellflower" />

        <TextView
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:id="@+id/tvVersionApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Версия 1.0"
            android:textColor="@color/black"
            android:fontFamily="@font/irinactt"
            android:textSize="16sp"/>

        <TextView
            android:layout_marginTop="30dp"
            android:textSize="16dp"
            android:gravity="center"
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:clickable="true"
            android:onClick="clickTextView"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/irinactt" />



    </LinearLayout>


    <LinearLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fence3">


            <ImageButton
                android:id="@+id/btnBackMenu7"
                android:layout_width="80sp"
                android:layout_height="50sp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/btnback2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>