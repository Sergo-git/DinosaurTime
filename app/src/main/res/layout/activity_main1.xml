<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/clearbuckground">




    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardElevation="15dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/fossils">


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnTheropods"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/invisible"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btnPterosaurs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/invisible"
                    android:layout_weight="1"/>

            </LinearLayout>


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnSauropods"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/invisible"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btnMarine"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/invisible"
                    android:layout_weight="1"/>


            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/fence3">

            <ImageButton
                android:id="@+id/btnBackMenu2"
                android:layout_width="80sp"
                android:layout_height="50sp"
                android:background="@drawable/btnback2"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"/>

            <ImageButton
                android:id="@+id/btnInfo"
                android:layout_width="80sp"
                android:layout_height="50sp"
                android:background="@drawable/btninformation"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnBackMenu2"
                app:layout_constraintHorizontal_bias="0.917"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>




</LinearLayout>