<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartStartActivity"
    android:orientation="vertical"
    android:background="@drawable/clearbuckground">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTEXTTEXTView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Время динозавров"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/angrybirdsregular3"/>


        </LinearLayout>






        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">

            <androidx.cardview.widget.CardView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/gray1"
                android:layout_weight="1">


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/frameforfragment">


            <ImageButton
                android:id="@+id/btnStartDinosaurus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/invisible"
                android:layout_weight="1"
                android:src="@drawable/ss1"
                android:scaleType="centerInside"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@color/invisible"
                android:gravity="center"
                android:text="Динозавры"
                android:layout_marginBottom="2dp"
                android:textColor="@color/white"
                android:fontFamily="@font/font_bellflower"/>


            </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/gray1"
                android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/frameforfragment">

                <ImageButton
                    android:id="@+id/btnStartEra"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/invisible"
                    android:src="@drawable/ss2"
                    android:layout_weight="1"
                    android:scaleType="centerInside"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:background="@color/invisible"
                    android:text="Периоды обитания"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/font_bellflower"/>

            </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>






        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">

            <androidx.cardview.widget.CardView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/gray1"
                android:layout_weight="1">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/frameforfragment">

                <ImageButton
                    android:id="@+id/btnStartPaleontology"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/invisible"
                    android:src="@drawable/ss3"
                    android:layout_weight="1"
                    android:scaleType="centerInside"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@color/invisible"
                    android:gravity="center"
                    android:layout_weight="0"
                    android:text="История изучения"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/font_bellflower"/>

            </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/gray1"
                android:layout_weight="1">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/frameforfragment">

                <ImageButton
                    android:id="@+id/btnStartNews"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/invisible"
                    android:src="@drawable/ss4"
                    android:layout_weight="1"
                    android:scaleType="centerInside"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@color/invisible"
                    android:text="Новости палеонтологии"
                    android:layout_weight="0"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/font_bellflower"/>

            </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>


        /////////////////////////////


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">

            <androidx.cardview.widget.CardView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/gray1"
                android:layout_weight="1">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/frameforfragment">

                <ImageButton
                    android:id="@+id/btnStartAboutApp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/invisible"
                    android:src="@drawable/ss5"
                    android:layout_weight="1"
                    android:scaleType="centerInside"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@color/invisible"
                    android:gravity="center"
                    android:layout_weight="0"
                    android:text="О приложении"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/font_bellflower"/>

            </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:cardUseCompatPadding="true"
                app:cardElevation="2dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/gray1"
                android:layout_weight="1">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/frameforfragment">

                <ImageButton
                    android:id="@+id/btnExit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/invisible"
                    android:src="@drawable/ss6"
                    android:layout_weight="1"
                    android:scaleType="centerInside"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="Выход"
                    android:layout_weight="0"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/font_bellflower"/>

            </LinearLayout>

            </androidx.cardview.widget.CardView>




        </LinearLayout>



</LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        android:background="@drawable/fence3">


    </LinearLayout>





</LinearLayout>